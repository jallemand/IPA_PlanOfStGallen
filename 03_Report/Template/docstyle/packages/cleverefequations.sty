% ==============================================================================
% Load packages
% ==============================================================================
\RequirePackage[noabbrev]{cleveref} % simplifies cross-referencing




% ==============================================================================
% Change the equation format to only number in brackets
% ==============================================================================
\crefformat{equation}{(#2#1#3)}
\crefrangeformat{equation}{(#3#1#4)--(#5#2#6)}
\crefmultiformat{equation}{(#2#1#3)}{, (#2#1#3)}{, (#2#1#3)}{ and~(#2#1#3)}
\crefrangemultiformat{equation}{(#3#1#4)--(#5#2#6)}{, (#3#1#4)--(#5#2#6)}{, (#3#1#4)--(#5#2#6)}{ and~(#3#1#4)--(#5#2#6)}

\Crefformat{equation}{Equation~(#2#1#3)}
\Crefrangeformat{equation}{Equations~(#3#1#4)--(#5#2#6)}
\Crefmultiformat{equation}{Equations~(#2#1#3)}{, (#2#1#3)}{, (#2#1#3)}{ and~(#2#1#3)}
\Crefrangemultiformat{equation}{Equations~(#3#1#4)--(#5#2#6)}{, (#3#1#4)--(#5#2#6)}{, (#3#1#4)--(#5#2#6)}{ and~(#3#1#4)--(#5#2#6)}